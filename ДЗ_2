import sqlite3 as sl

con = sl.connect('my-test.db')

with con:
    con.execute("""
        DROP TABLE SNEAKERS1
    """)

with con:
    con.execute("""
        CREATE TABLE SNEAKERS1 (
            id INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT,
            name TEXT,
            count INTEGER,
            manufacture TEXT,
            price FLOAT,
            size FLOAT
        );
    """)

id=1

#
